<Window x:Class="IDR_Demo_build.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IDR_Demo_build.Controls"
        mc:Ignorable="d" Title="Respository Settings" Height="700" Width="900" WindowStyle='None' ResizeMode='NoResize' Topmost='True' WindowStartupLocation='CenterOwner' UseLayoutRounding='True'>
		<Grid>
				<Grid.ColumnDefinitions>
						<ColumnDefinition Width='18*'/>
						<ColumnDefinition Width='5*'/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
						<RowDefinition Height='20*'/>
						<RowDefinition Height='5*'/>
				</Grid.RowDefinitions>
				<local:NewUserSetup Grid.RowSpan='2' Grid.ColumnSpan='2'/>
				<Button x:Name='Save' Click='Save_Click' Grid.Row='1' Grid.Column='1' Content='Save and exit' VerticalAlignment='Top' Margin='10'/>
		</Grid>
</Window>
